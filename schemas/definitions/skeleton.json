{
  "$id": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/definitions/skeleton.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [ "asset_bundle" ],
  "asset_bundle": {
    "type": "string",
    "description": "Reference to an AssetBundle."
  },
  "oneOf": [
    {
      "type": "object",
      "required": [ "object_path" ],
      "properties": {
        "object_path": {
          "type": "string",
          "description": "Path to a singular spine animaation within the provided AssetBundle that includes all of its animations."
        }
      }
    },
    {
      "type": "object",
      "required": [ "animations" ],
      "properties": {
        "animations": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [ "animation", "object_path" ],
            "uniqueItems": true,
            "properties": {
              "animation": {
                "$ref": "../definitions/anim.json"
              },
              "object_path": {
                "type": "string",
                "description": "Path to a spine animaation within the provided AssetBundle that specifies the animation specified."
              }
            }
          }
        }
      }
    }
  ]
}