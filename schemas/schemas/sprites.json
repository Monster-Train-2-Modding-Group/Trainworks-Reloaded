{
  "$id": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/schemas/sprites.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "sprites": {
      "type": "array",
      "description": "A collection of all sprites in the game, defining their properties and image paths.",
      "items": {
        "required": [
          "id",
          "path"
        ],
        "properties": {
          "extrude": {
            "type": "integer",
            "default": 0,
            "minimum": 0,
            "description": "Sets the extrude parameter."
          },
          "id": {
            "minLength": 1,
            "type": "string",
            "description": "Unique identifier for this sprite. This ID is used to reference the sprite throughout the game."
          },
          "mesh_type": {
            "type": "string",
            "enum": [
              "full_rect",
              "tight"
            ],
            "default": "full_rect",
            "description": "Sprite mesh type."
          },
          "path": {
            "type": "string",
            "description": "Path to the sprite image file. The path should be relative to the mod's assets directory."
          },
          "pivot": {
            "$ref": "../definitions/vec2.json",
            "description": "Pivot point of the sprite.",
            "default": {
              "x": 0.5,
              "y": 0.5
            }
          },
          "pixels_per_unit": {
            "type": "number",
            "description": "Pixels per unit.",
            "default": 100.0
          },
          "wrap_mode": {
            "type": "string",
            "enum": [ "repeat", "clamp", "mirror", "mirror_once" ],
            "description": "Sets the wrap mode for the underlying texture",
            "default": "clamp"
          }
        },
        "description": "A sprite definition that specifies the properties and image path of a sprite used in the game."
      }
    }
  }
}